<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Target Sleep Hours Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Sleep Hours"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <EditText
            android:id="@+id/target_sleep_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter target sleep hours"
            android:inputType="numberDecimal" />

        <!-- Sleep Start Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleep Start Time"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/sleep_start_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Start Time" />

        <TextView
            android:id="@+id/selected_sleep_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Selected"
            android:layout_marginTop="8dp" />

        <!-- Wake-Up Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake-Up Time"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/wake_up_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Wake-Up Time" />

        <TextView
            android:id="@+id/selected_wake_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Selected"
            android:layout_marginTop="8dp" />

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/date_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date" />

        <TextView
            android:id="@+id/selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_marginTop="8dp" />

        <!-- Total Sleep Hours -->
        <TextView
            android:id="@+id/total_sleep_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Sleep Hours: --"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginTop="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>